{
  "name": "gitportree",
  "displayName": "gitportree",
  "description": "Manage Git worktrees with auto ports & theme colors",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatsuro13/gitportree"
  },
  "publisher": "tatsuro13",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/gitportree.png",
  "activationEvents": [
    "onView:gitPortree.worktrees",
    "onCommand:gitPortree.refresh",
    "onCommand:gitPortree.createWorktree",
    "onCommand:gitPortree.openWorktree",
    "onCommand:gitPortree.removeWorktree",
    "onCommand:gitPortree.copyPortInfo",
    "onCommand:gitPortree.changeWorktree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gitPortree.worktrees",
          "name": "GitPortree"
        }
      ]
    },
    "commands": [
      {
        "command": "gitPortree.refresh",
        "title": "Refresh GitPortree",
        "icon": "$(refresh)"
      },
      {
        "command": "gitPortree.createWorktree",
        "title": "Create Worktree",
        "icon": "$(add)"
      },
      {
        "command": "gitPortree.openWorktree",
        "title": "Open Worktree",
        "icon": "$(folder-opened)"
      },
      {
        "command": "gitPortree.removeWorktree",
        "title": "Remove Worktree",
        "icon": "$(trash)"
      },
      {
        "command": "gitPortree.copyPortInfo",
        "title": "Copy Port Info",
        "icon": "$(copy)"
      },
      {
        "command": "gitPortree.changeWorktree",
        "title": "Change Worktree",
        "icon": "$(git-branch)"
      },
      {
        "command": "gitPortree.deleteBranch",
        "title": "Delete Worktree Branch",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitPortree.refresh",
          "when": "view == gitPortree.worktrees",
          "group": "navigation@1"
        },
        {
          "command": "gitPortree.createWorktree",
          "when": "view == gitPortree.worktrees",
          "group": "navigation@2"
        },
        {
          "command": "gitPortree.changeWorktree",
          "when": "view == gitPortree.worktrees",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "gitPortree.changeWorktree",
          "when": "view == gitPortree.worktrees && viewItem =~ /gitPortree\\.worktree/",
          "group": "navigation@0"
        },
        {
          "command": "gitPortree.openWorktree",
          "when": "view == gitPortree.worktrees && viewItem =~ /gitPortree\\.worktree/",
          "group": "inline@1"
        },
        {
          "command": "gitPortree.removeWorktree",
          "when": "view == gitPortree.worktrees && viewItem =~ /gitPortree\\.worktree/",
          "group": "inline@2"
        },
        {
          "command": "gitPortree.copyPortInfo",
          "when": "view == gitPortree.worktrees && viewItem =~ /gitPortree\\.worktree/",
          "group": "navigation@1"
        },
        {
          "command": "gitPortree.deleteBranch",
          "when": "view == gitPortree.worktrees && viewItem == gitPortree.worktree.managed",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run generate-icon && pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "generate-icon": "node scripts/generate-icon.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
